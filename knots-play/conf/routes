# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              @controllers.ApplicationController.index
GET         /user/auth/signin              @controllers.ApplicationController.signin
GET         /user/auth/signup              @controllers.ApplicationController.signup
GET         /user/auth/signout             @controllers.ApplicationController.signout
GET         /user/auth/:provider           @controllers.SocialAuthController.authenticate(provider)
POST        /user/auth/credentials         @controllers.CredentialsAuthController.authenticate
POST        /user/auth/signup              @controllers.SignupController.signup

#Admin panel
GET         /admin                         @controllers.AdminController.index
GET         /admin/users                   @controllers.AdminController.listUsers
GET         /admin/masseurs                @controllers.AdminController.listMasseurs
POST        /admin/masseurs/add            @controllers.AdminController.addMasseur
GET         /admin/calendar                @controllers.AdminController.calendar
GET         /admin/auth/login              @controllers.AdminController.signin
POST        /admin/auth/signup             @controllers.AdminSignupController.signup
GET        /admin/auth/signup              @controllers.AdminSignupController.signup
POST        /admin/auth/credentials        @controllers.AdminCredentialsAuthController.authenticate

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)